extends layout
block content 
    .container
            if pseudo 
                div Bonjour #{pseudo}
            else 
                div Entrez votre nom d'utilisateur et votre mot de passe
            form#form(action="/givePseudo" method="post" name="pseudo") 
                input(type="text" name="pseudo" placeholder="pseudo")
                input(type="text" name="password" placeholder="mot de passe")
                input#valider(type="submit" value="Valider" )