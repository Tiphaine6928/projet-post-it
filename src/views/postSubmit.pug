        h1 Create a New Post
        form(action="/postSubmit" method="POST")
        div
            label(for="name") Name:
            input(type="text" name="name" id="name" required)
        div
            label(for="image") Image URL:
            input(type="url" name="image" id="image" required)
        div
            label(for="legend") Legend:
            input(type="text" name="legend" id="legend")
        div
            label(for="likes") Likes:
            input(type="number" name="likes" id="likes" min="0")
        div
            button(type="submit") Submit



